<h1><%= @person.name %></h1>

<div class="container">
  <div class="row">
    <table class="table">
      <% @person.attribs.each do |attrib| %>
        <tr>
          <td><%= best_in_place attrib, :name, as: :input %></td>
          <td><%= best_in_place attrib, :value, as: :textarea %></td>
        </tr>
      <% end %>

    </table>
  </div>
</div>
